{
  "version": "0.2.0",
  "configurations": [ 
    {
    "name": "Run Extension",
    "type": "extensionHost",
    "request": "launch",
    "sourceMaps": true,
    "runtimeExecutable": "${execPath}",
    "args": [
      "--extensionDevelopmentPath=${workspaceFolder}",
      "--enable-proposed-api",
      "workspacecopilot" // Replace with your extension ID
    ],
    "outFiles": ["${workspaceFolder}/.vscode/extensions/workspacecopilot/out/**/*.js"]
    }
  ],
}
