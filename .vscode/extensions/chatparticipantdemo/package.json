{
  "name": "chatparticipantdemo",
  "displayName": "[workspace] ChatParticipantDemo",
  "description": "Tech Connect FY25 - ChatParticipant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tcfy25.llm",
        "title": "TCFY25 - Talk to LLM"
      },
      {
        "command": "tcfy25.refactorCode",
        "title": "TCFY25 - Refactor Code"
      }
    ],
    "chatParticipants": [
      {
          "id": "tcfy25.speaker-assistant",
          "fullName": "Speaker Assistant",
          "name": "speaker",
          "description": "Best Speaker Assistant.",
          "isSticky": true
      },
      {
        "id": "tcfy25.advanced-assistant",
        "fullName": "Advanced Assistant",
        "name": "advanced",
        "description": "Advanced Reasoning Copilot.",
        "isSticky": true 
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "todos",
          "name": "Todos for Tech Connect FY25"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
