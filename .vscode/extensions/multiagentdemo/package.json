{
  "name": "multiagentdemo",
  "displayName": "[workspace] MultiAgentDemo",
  "description": "Tech Connect FY25 - MultiAgentDemo",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "multi-agent.coordinator",
        "fullName": "Coordinator",
        "name": "coordinator",
        "description": "Best Multi Agent Coordinator",
        "isSticky": true,
        "commands": [
					{
						"name": "list",
						"description": "List all available tools"
					}
        ]
      },
      {
        "id": "multi-agent.pm",
        "fullName": "Project Manager",
        "name": "pm",
        "description": "Best Project Manager",
        "isSticky": true,
        "commands": [
					{
						"name": "list",
						"description": "List all available tools"
					}
        ]
      }
    ],
    "languageModelTools": [
      {
        "name": "CallAgent",
        "tags": ["multi-agent"],
        "toolReferenceName": "CallAgent",
        "displayName": "Call Agent",
        "modelDescription": "Call an agent to do something.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "agent": {
              "type": "string",
              "description": "The name of the chat participant / agent to call"
            },
            "previousRequestByUser": {
              "type": "string",
              "description": "The previous request by the user"
            },
            "previousResponseByCopilot": {
              "type": "string",
              "description": "The previous response by the copilot"
            },
            "request": {
              "type": "string",
              "description": "The request to send to the agent"
            }
          },
          "required": [
            "agent",
            "request",
            "previousRequestByUser",
            "previousResponseByCopilot"
          ]
        }
      },
      {
        "name": "CreateProjectPlan",
        "tags": ["project-manager"],
        "toolReferenceName": "CreateProjectPlan",
        "displayName": "Create Project Plan",
        "modelDescription": "Creates a clear project plan.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "projectDescription": {
              "type": "string",
              "description": "The initial project description and briefing."
            }
          },
          "required": [
            "projectDescription"
          ]
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "scripts",
          "name": "Scripts found in Workspace"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@vscode/prompt-tsx": "^0.3.0-alpha.17"
  }
}
