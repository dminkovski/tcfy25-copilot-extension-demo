{
  "name": "WorkspaceCopilotDemo",
  "displayName": "[workspace] WorkspaceCopilotDemo",
  "description": "Tech Connect FY25 - Demo for GH Copilot Customization in Workspace",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "wilot",
        "fullName": "Wilot the Workspace Copilot",
        "name": "wilot",
        "description": "Custom Copilot for my Workspace",
        "isSticky": true,
        "commands": [
					{
						"name": "list",
						"description": "List all available tools"
					}
        ]
      }
    ],
    "languageModelTools": [
      {
				"name": "runScript",
        "toolReferenceName": "runScript",
				"tags": [
					"terminal",
          "execute",
          "script"
				],
				"displayName": "Run Script in Terminal",
				"modelDescription": "Run the script in the terminal and return the output. Make sure to provide the correct command and path based on workspace context.",
				"inputSchema": {
					"type": "object",
					"properties": {
						"command": {
							"type": "string",
							"description": "The command to run"
						}
					},
					"required": [
						"command"
					]
				}
			},
      {
        "name": "updateFile",
        "displayName": "Update File",
        "modelDescription": "Update a file or script in the workspace with new content and save it.",
        "inputSchema": {
					"type": "object",
					"properties": {
						"filePath": {
							"type": "string",
							"description": "The path of the file or script to be changed."
						},
            "fileContent": {
							"type": "string",
							"description": "The content that goes into the file."
						}
					},
					"required": [
						"filePath",
            "fileContent" 
					]
				}
      },
      {
        "name": "deleteFile",
        "displayName": "Delete File",
        "modelDescription": "Delete a file from the workspace.",
        "inputSchema": {
					"type": "object",
					"properties": {
						"filePath": {
							"type": "string",
							"description": "The path of the file or script to be deleted."
						}
					},
					"required": [
						"filePath"
					]
				}
      },
      {
        "name": "createFile",
        "displayName": "Create File",
        "modelDescription": "Create a file and add it to the workspace.",
        "inputSchema": {
					"type": "object",
					"properties": {
						"fileName": {
							"type": "string",
							"description": "The name of the file or script to be created."
						},
            "fileContent": {
							"type": "string",
							"description": "The content of the file to be created."
						}
					},
					"required": [
						"fileName",
            "fileContent"
					]
				}
      }    
    ],
    "views": {
      "explorer": [
        {
          "id": "scripts",
          "name": "Scripts found in Workspace"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@vscode/prompt-tsx": "^0.3.0-alpha.17"
  }
}
